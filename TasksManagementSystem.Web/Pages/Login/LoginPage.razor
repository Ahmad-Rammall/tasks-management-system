@page "/"
@inherits LoginBase

<div class="page">
    <div class="login-container">
        <h2>Login</h2>
        <form method="post">
            <div class="mb-3">
                <input type="text" placeholder="Username" class="form-control " @bind="Username">
                @if (Username?.Length < 5)
                {
                    <span class="text-danger">Minimum 5 chars.</span>
                    IsValid = false;
                }
                else
                {
                    IsValid = true;
                }
            </div>
            <div class="mb-3">
                <input type="password" placeholder="Password" class="form-control" @bind="Password">
                @if (Password?.Length < 8)
                {
                    <span class="text-danger">Minimum 8 chars.</span>
                    IsValid = false;
                }
                else
                {
                    IsValid = true;
                }
            </div>
            <button type="button" class="submit-btn" @onclick="HandleLogin">Login</button>
        </form>
        <a href="/register">Register</a>
        @if(ErrorMessage != null)
        {
            <DisplayError Message="@ErrorMessage" />
        }

    </div>
</div>
