@page "/profiles"
@layout AdminLayout
@inherits ProfilesBase

@if (IsAdmin)
{
    <div class="d-flex justify-content-between align-items-center m-2 mb-4">
        <h3>ProfilesPage</h3>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProfileModal">Add Profile</button>
    </div>

    @if (EmployeesList != null && EmployeesList.Count() > 0)
    {
        <table class="table table-striped table-bordered table-hover table-responsive text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Fullname</th>
                    <th>Role</th>
                    <th>Deleted</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var employee in EmployeesList)
                {
                    <ProfileComponent Employee="@employee" SetSelectedProfileId="UpdateSelectedUserId" OpenDeleteModal="OpenDeleteModal"/>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="no-content">No Employees Yet!</div>
    }


    @* Delete Modal *@

    <DeleteConfirmationModal @ref="@deleteModal" OnConfirm="DeleteEmployee" />

    @* Add Profile *@

    <div class="modal fade" id="addProfileModal" tabindex="-1" aria-labelledby="addProfileModal" aria-hidden="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add Employee Profile</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Employee Fullname:</label>
                            <input type="text" class="form-control" @bind="FullName">
                        </div>
                        <div class="mb-3">
                            <label for="message-text" class="col-form-label">Username :</label>
                            <input type="text" class="form-control" @bind="Username"></input>
                        </div>
                        <div class="mb-3">
                            <label for="message-text" class="col-form-label">Password :</label>
                            <input type="password" class="form-control" @bind="Password"></input>
                        </div>
                        <div class="text-danger">@ErrorMessage</div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" @onclick="AddEmployee">Add Profile</button>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h1 class="text-danger">UNAUTHORIZED</h1>
}