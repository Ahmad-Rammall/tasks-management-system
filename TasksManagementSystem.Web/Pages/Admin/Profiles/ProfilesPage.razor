@page "/profiles"
@layout AdminLayout
@inherits ProfilesBase

@if (IsAdmin)
{
    <div class="d-flex justify-content-between align-items-center m-2 mb-4">
        <h3>ProfilesPage</h3>
        @* <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProfileModal">Add Profile</button> *@
        <button type="button" class="btn btn-primary" @onclick="@OpenAddModal">Add Profile</button>

    </div>

    @if (EmployeesList != null && EmployeesList.Count() > 0)
    {
        <table class="table table-striped table-bordered table-hover table-responsive text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Fullname</th>
                    <th>Role</th>
                    <th>Deleted</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var employee in EmployeesList)
                {
                    <ProfileComponent Employee="@employee" SetSelectedProfileId="UpdateSelectedProfileId"
                            OpenDeleteModal="OpenDeleteModal" OpenUpdateModal="OpenUpdateModal" SetSelectedUser="UpdateSelectedUser" />
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="no-content">No Employees Yet!</div>
    }


    @* Delete Modal *@

    <DeleteConfirmationModal @ref="@deleteModal" OnConfirm="DeleteEmployee" />

    @* Add Profile Modal *@
    <ProfileModal @ref="@AddProfileModal" Callback="AddEmployee" Username="@Username"
                  Password="@Password" FullName="@FullName" OnModalChange="OnModalChange" />

    @* Update Profile Modal *@
    <ProfileUpdateModal @ref="@UpdateProfileModal" Callback="UpdateEmployee" Employee="@SelectedUser"
                  Password="@Password" OnModalChange="OnModalChange" />
}
else
{
    <h1 class="text-danger">UNAUTHORIZED</h1>
}